<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mapper.StaffsMapper">
<!--根据id更新-->
    <update id="update" parameterType="com.itheima.pojo.Staffs">
        update staffs
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="salary != null">
                salary = #{salary},
            </if>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime}
            </if>
        </set>
        where id = #{id}
    </update>

<!--根据id删除员工-->
    <delete id="deleteById">
        delete from staffs where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="list" resultType="com.itheima.pojo.Staffs">
        select s.*
        from staffs s
        <where>
            <if test="name != null and name != ''">
            s.name like concat('%', #{name}, '%')
            </if>
            <if test="gender != null">
            and s.gender = #{gender}
            </if>
            <if test="createTime != null and updateTime != null">
            and s.create_time between #{createTime} and #{updateTime}
            </if>

    </where>order by s.create_time desc
    </select>
</mapper>